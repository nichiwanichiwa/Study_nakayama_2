<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="jp.co.nichiwa_system.nakayamanobuo.test123.setting">


    <fragment
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="jp.co.nichiwa_system.nakayamanobuo.test123.ButtonFragment"
        class="jp.co.nichiwa_system.nakayamanobuo.test123.ButtonFragment"
        android:id="@+id/fragment"
        tools:layout="@layout/fragment_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="大人"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="小人"
        android:id="@+id/textView5"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/spinner_adult"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="期日"
        android:id="@+id/textView6"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="設定"
        android:id="@+id/textView7"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/textView5"
        android:layout_alignStart="@+id/textView25" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView19"
        android:layout_toEndOf="@+id/textView17" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="日"
        android:id="@+id/textView11"
        android:layout_above="@+id/textView20"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="幼児"
        android:id="@+id/adult"
        android:layout_alignTop="@+id/spinner_child"
        android:layout_toEndOf="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView15"
        android:layout_alignTop="@+id/spinner_b"
        android:layout_toEndOf="@+id/textView18"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※中学生以上"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※2歳～小学生"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※2歳未満"
        android:id="@+id/textView18"
        android:layout_below="@+id/adult"
        android:layout_alignStart="@+id/adult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※非常食の消費期限到達の何日前にメッセージを出すかを設定"
        android:id="@+id/textView19"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView18"
        android:layout_alignEnd="@+id/adult" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="※何日分の備蓄をするのか設定"
        android:id="@+id/textView20"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_id"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/spinner_child" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_adult"
        android:layout_alignTop="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="人"
        android:id="@+id/textView25"
        android:layout_alignTop="@+id/spinner_adult"
        android:layout_toEndOf="@+id/textView17" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_child"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_b"
        android:layout_alignTop="@+id/adult"
        android:layout_toEndOf="@+id/textView19"
        android:spinnerMode="dialog" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_l"
        android:layout_alignTop="@+id/textView10"
        android:layout_alignStart="@+id/spinner_id" />
    <fragment
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:name="jp.co.nichiwa_system.nakayamanobuo.test123.Banner"
        class="jp.co.nichiwa_system.nakayamanobuo.test123.Banner"
        android:id="@+id/fragment2"
        tools:layout="@layout/fragment_banner"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
